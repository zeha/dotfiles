\set QUIET 1
\x auto
\timing

\pset linestyle unicode
\pset null 'â„•'

\set HISTSIZE 200000
\set HISTFILE ~/.psql_history- :DBNAME

\set PROMPT1 '%[%033[1m%]%m%x%[%033[0m%]%# '
\set PROMPT2 '%R ... '

\set ECHO queries
\set VERBOSITY verbose

\unset QUIET

\set active_queries 'select pid, usename||\'@\'||application_name AS user_application, backend_start, xact_start, query_start, state || \'/\' || coalesce(wait_event::text, \'\') as state, substring(trim(both E\' \t\r\n\' from replace(query, E\'\n\', \' \')) from 1 for 40) AS query from pg_stat_activity where state != \'idle\' order by xact_start nulls first;'
