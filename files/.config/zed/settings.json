// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "ssh_connections": [
    {
      "host": "tiksta.local",
      "projects": []
    },
    {
      "host": "zeppelin.local",
      "projects": [
        {
          "paths": ["~/Source"]
        }
      ]
    }
  ],
  "telemetry": {
    "metrics": false
  },
  "ui_font_size": 15,
  "buffer_font_size": 13,
  "theme": {
    "mode": "system",
    "light": "Andromeda",
    "dark": "Andromeda"
  },
  "languages": {
    "CSS": {
      "format_on_save": "off"
    },
    "JSON": {
      "format_on_save": "off"
    },
    "YAML": {
      "format_on_save": "off"
    },
    "HTML": {
      "format_on_save": "off"
    }
  },
  "use_autoclose": false,
  "auto_signature_help": true
}
