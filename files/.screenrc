hardstatus alwayslastline "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G} %H: %l%{..Y} @ %D%d/%m %c "
caption splitonly "%3n %t"
deflogin off
defutf8 on
autodetach on
startup_message off
vbell off
